<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-orders-table" author="sistema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>

        <comment>Crear tabla orders para almacenar órdenes de crédito</comment>

        <createTable tableName="orders">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="deadline" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="email_address" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="id_status" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="id_loan_type" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="orders"
                                 baseColumnNames="id_status"
                                 constraintName="fk_orders_status"
                                 referencedTableName="status"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="orders"
                                 baseColumnNames="id_loan_type"
                                 constraintName="fk_orders_loan_type"
                                 referencedTableName="loan_type"
                                 referencedColumnNames="id"/>

        <createIndex tableName="orders" indexName="idx_orders_email_address">
            <column name="email_address"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_status">
            <column name="id_status"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_loan_type">
            <column name="id_loan_type"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_creation_date">
            <column name="creation_date"/>
        </createIndex>

        <createIndex tableName="orders" indexName="idx_orders_deadline">
            <column name="deadline"/>
        </createIndex>

        <rollback>
            <dropTable tableName="orders"/>
        </rollback>
    </changeSet>

</databaseChangeLog>